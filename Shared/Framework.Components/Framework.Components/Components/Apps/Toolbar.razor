<Tooltip Title="@(Resources.DataDictionary.Export)">
	<Button Shape="@ButtonShape.Circle" Icon="@IconType.Outline.Export" OnClick="OnDeleteClick" />
</Tooltip>

<Tooltip Title="@(Resources.DataDictionary.Edit)">
	<Button Shape="@ButtonShape.Circle" Icon="@IconType.Outline.Edit" OnClick="OnEditClick" />
</Tooltip>

<Tooltip Title="@(Resources.DataDictionary.Add)">
	<Button Shape="@ButtonShape.Circle" Icon="@IconType.Outline.Plus" OnClick="OnAddClick" />
</Tooltip>

<Tooltip Title="@(Resources.DataDictionary.Reload)">
	<Button Shape="@ButtonShape.Circle" Icon="@IconType.Outline.Reload" OnClick="OnRefreshClick" />
</Tooltip>

@code {

	[Parameter]
	public EventCallback OnAddClick { get; set; }

	[Parameter]
	public EventCallback OnDeleteClick { get; set; }

	[Parameter]
	public EventCallback OnEditClick { get; set; }

	[Parameter]
	public EventCallback OnRefreshClick { get; set; }

}
