<Form Model="Models"
   LabelColSpan="8"
   WrapperColSpan="16">
	<FormItem Label="@(Resources.DataDictionary.LeadStatus)">
		<Select Mode="default"
	DataSource="_persons"
		@bind-Value="@context.LeadStatus.Name"
	LabelName="@nameof(Person.Name)"
	ValueName="@nameof(Person.Name)">
		</Select>
	</FormItem>
	<FormItem Label="@(Resources.DataDictionary.LeadSource)">
		<Select Mode="default"
	DataSource="_persons"
		@bind-Value="@context.LeadSource.Name"
	LabelName="@nameof(Person.Name)"
	ValueName="@nameof(Person.Name)">
		</Select>
	</FormItem>	
</Form>

@code {
	[Parameter]
	public Models.CreateLeadViewModel Models { get; set; }

	int value = 1;
	record Person(string Name);
	private List<Person> _persons = new List<Person>
		{
			new Person("John"),
			new Person("Lucy"),
			new Person("Jack"),
			new Person("Emily"),
		};

}
