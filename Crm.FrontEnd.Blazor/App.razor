@using Crm.FrontEnd.Blazor.Shared
@using Crm.FrontEnd.Blazor.Shared.Layouts.Ltr;

<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(Program).Assembly"
   AdditionalAssemblies="new[] { typeof(Leads.Pages.Leads).Assembly}">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
				<NotAuthorized>
					@if (context?.User?.Identity?.IsAuthenticated == false)
					{
						<RedirectToLogin />
					}
					else
					{
						<p>
							@(Resources.Messages.Errors.NoAuthorization)
						</p>
					}
				</NotAuthorized>
			</AuthorizeRouteView>
		</Found>
		<NotFound>
			<LayoutView Layout="@typeof(MainLayout)">
				<p class="mx-auto">
					Sorry, there is nothing at this address.
				</p>
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>

